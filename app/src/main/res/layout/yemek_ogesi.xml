<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_yemekAdi_yemekOgesi"
            android:text="Yemek Adı"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#FF5722"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/img_yemekResmi_yemekOgesi"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_marginTop="25dp"
                android:background="@android:color/transparent"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher" />


            <TextView
                android:id="@+id/txt_yemekFiyati_yemekOgesi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/img_yemekResmi_yemekOgesi"
                android:text="Yemek Fiyatı"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_sepeteEkle_yemekOgesi"
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:layout_alignLeft="@id/btn_duzenle_yemekOgesi"
                android:layout_toEndOf="@id/txt_yemekFiyati_yemekOgesi"
                android:background="@drawable/button_arkaplan"
                android:text="EKLE" />

            <Button
                android:id="@+id/btn_duzenle_yemekOgesi"
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:layout_alignLeft="@id/img_yemekResmi_yemekOgesi"
                android:layout_marginLeft="290dp"
                android:layout_marginTop="100dp"
                android:layout_toEndOf="@id/txt_yemekFiyati_yemekOgesi"
                android:background="@drawable/button_arkaplan"
                android:text="DÜZENLE" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>